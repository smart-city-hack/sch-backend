{
    "extends": [
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "semi": [
            "warn",
            "never"
        ],
        "comma-dangle": [
            "warn",
            {
                "objects": "always-multiline",
                "arrays": "always-multiline",
                "functions": "only-multiline"
            }
        ],
        "comma-spacing": [
            "warn",
            {
                "before": false,
                "after": true
            }
        ],
        "key-spacing": [
            "warn",
            {
                "beforeColon": false,
                "afterColon": true,
                "mode": "strict"
            }
        ],
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "indent": [
            "warn",
            4
        ]
    }
}